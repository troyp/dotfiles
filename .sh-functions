tohtml () {
    # usage:    tohtml [ PORT [ STYLE DECLARATIONS ] ]
    # eg:       ls -l | tohtml 8000 "color: blue"
    tmp=$(mktemp);

    printf 'HTTP/1.1 200 OK\n\n' >> $tmp;
    printf '<html><body style="' >> $tmp;
    echo -n "$2" >> $tmp;
    printf '">' >> $tmp
    while read -r line; do
	      printf "$line" | htent >> $tmp;
	      printf "</br>\n" >> $tmp;
    done;
    printf '</body></html>' >> $tmp;

    while true; do
	      cat $tmp | nc -l ${1:-8080};
    done;
}

