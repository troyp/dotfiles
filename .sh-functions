catnth () {
    # catenate files on specified lines of the input
    # eg. locate foo | catnth 3 5
    #     catenates 3rd and 5th files returned by locate
    tmp=`mktemp`;
    cat > $tmp;
    while [ $# -gt 0 ]; do
	      cat `sed "${1}q;d" $tmp`;
	      shift;
    done;
}

