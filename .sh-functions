        cat <<EOF
-h [-h] COMMAND [TOPIC]
    Display help.

    Options:
      -h --help     display this help
EOF
        shift;
        fi
    (
        [[ $PAGER =~ ^less($| ) ]] && PAGER="${PAGER/less/less -F}"
        cmd="$1"
