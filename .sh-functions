}
git-previous-commit () {
    if [[ -n $1 ]]; then commithash=$1; else read commithash; fi;
    git log | grep -F -A6 $commithash | tail -n1 | cuts 2;
}

github-next-commit () {
    if [[ -n $1 ]]; then url=$1; else read url; fi;
