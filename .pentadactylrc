js <<EOF
String.prototype.capitalize = function() {
    return this.replace(/\b\w/g,
                        function (c) { return c.toUpperCase(); });
}
function eplist (s) {
    var sConv = s.capitalize().replace(" ", "_");
    dactyl.open("www.wikipedia.org/wiki/List_of_" + sConv + "_episodes");
}
EOF


