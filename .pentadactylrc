js <<EOF
function toggleMenu() {
    var menu = content.document.getElementsByClassName('menu')[0];
    if (menu.className.endsWith(' open'))
        menu.className = menu.className.slice(0,-5);
    else
        menu.className += ' open';
}
EOF

