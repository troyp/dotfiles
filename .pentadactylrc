js <<EOF
createAlias = function(alias, def) {
  var cmd = "dactyl.execute(\"'" + def + "' + (bang ? '! ' : ' ') + ' '.join(args);\")"
  dactyl.execute("command! " + alias + " -nargs=* -bang -js " + cmd); 
}
EOF
command! alias -nargs=+ 
    \ -js createAlias(args[0], args[1]);

