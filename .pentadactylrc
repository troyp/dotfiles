function viewTiledOn() {
    tileView.viewTiled = true; 
    tileView.drawTiledLayout();
}
function viewTiledOff() {
    tileView.viewTiled = false; 
    tileView.drawSelectedPanel();
}
function viewTiledToggle() {
    if (tileView.viewTiled) 
        viewTiledOff();
    else 
        viewTiledOn();
}
EOF

